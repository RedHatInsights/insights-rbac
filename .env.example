# Use these defaults for a docker-compose environment
DATABASE_NAME=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Use these defaults for a manually started container environment
# DATABASE_NAME=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=15432
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres

API_PATH_PREFIX=/api/rbac

DEVELOPMENT=True
# DJANGO_DEBUG=True

OTLP_ENABLED=True
# Port 4317 is plain grpc, 4318 is grpc over http
OTLP_USE_GRPC=True
OTLP_ENDPOINT=http://localhost:4317
# OTLP_ENDPOINT=http://localhost:4318/v1/traces
# Use the next to supply a basic auth header
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=blabla
